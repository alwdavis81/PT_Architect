{
  "name": "torque-app",
  "version": "1.1.0-alpha",
  "description": "ATS/ETS2 Powertrain Architect",
  "author": "Alfred Davis (alwdavis81)",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "electron .",
    "dist": "npm run build && electron-builder",
    "test": "jest"
  },
  "main": "main.js",
  "build": {
    "appId": "com.mrmil.powertrainarchitect",
    "productName": "Powertrain Architect",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "publish": [
        {
          "provider": "github",
          "owner": "alwdavis81",
          "repo": "PT_Architect"
        }
      ]
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "main.js",
      "package.json",
      "node_modules/**/*"
    ],
    "extraFiles": [
      "HOW_TO_USE.md"
    ],
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true
    }
  },
  "dependencies": {
    "autoprefixer": "^10.4.23",
    "clsx": "^2.1.1",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.26",
    "jszip": "^3.10.1",
    "lucide-react": "^0.561.0",
    "next": "^15.1.0",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.6.0",
    "serve-handler": "^6.1.6",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "jest": "^30.2.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.6",
    "typescript": "^5"
  }
}